<div class="row">
	<div class="col-md-8">
		<%= link_to user_path(user) do %>
			<%= attachment_image_tag(user, :profile_image, size: "75x75", fallback: "noimage.png", class: "ml-2 user-icon") %>
		<% end %>
		<%= link_to user.name, user_path(user), class: "ml-2 link-to-black", style: "font-size:22px;" %>
	</div>
	<div class="btn-box col-md-4 mt-2">
		<% if user_signed_in? && current_user != user %>
			<% if current_user.following?(user) %>
				<%= link_to "フォロー解除", unfollow_path(user), method: :delete, remote: :true, class: "btn btn-outline-primary fav-btn" %>
			<% else %>
				<%= link_to "フォローする", follow_path(user), method: :post, remote: :true, class: "btn btn-primary fav-btn" %>
			<% end %>
		<% elsif current_user == user %>
			<%= link_to "ヒトコト投稿", new_post_path, class: "btn btn-primary mb-2" %>
			<%= link_to "登録情報", edit_user_path(current_user), class: "fas fa fa-edit link-to-black" %>
		<% else %>
			<%= link_to "会員登録してつながる", new_user_registration_path, class: "btn btn-primary fav-btn" %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-11 offset-md-1">
			<p class="intro-text"><%= simple_format(user.introduction) %></p>
	</div>
</div>
