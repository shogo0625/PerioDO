<div class="row">
	<% if @favorited_posts.count >= 1 %>
		<% @favorited_posts.each do |post| %>
			<div class="col-md-10 offset-md-1 post-index-box post-<%= post.id %>">
				<%= render "posts/post_detail", post: post %>
			</div>
		<% end %>
	<% else %>
		<div class="col-md-10 offset-md-1 new-user-info">
			<h5>ここにいいねしたヒトコトが表示されます。</h5>
			<h5>積極的にいいねしてみんなの行動を応援しましょう。</h5>
			<div class="row">
				<%= link_to "探す", search_path, class: "btn btn-primary mb-4 col-md-2 offset-md-5" %>
			</div>
		</div>
	<% end %>
</div>
<div class="row">
	<div class="col-md-10 offset-md-1">
		<%= link_to_next_page @favorited_posts, 'もっと見る', id: 'more-tab4', class: 'btn btn-light w-100 mt-2', params: {type: :tab4}, remote: true  %>
	</div>
</div>
