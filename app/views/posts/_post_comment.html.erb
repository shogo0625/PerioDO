<% post_comments.each do |pc| %>
<div class="col-md-10 offset-md-1 post-index-box">
	<div class="row">
		<div class="col-md-1">
			<%= link_to user_path(pc.user) do %>
				<%= attachment_image_tag(pc.user, :profile_image, size: "60x60", fallback: "noimage.png", class: "user-icon") %>
			<% end %>
		</div>
		<div class="col-md-11">
			<div class="row">
				<div class="col-md-6">
					<%= link_to pc.user.name, user_path(pc.user), class: "link-to-black ml-2" %>
					<i class="fas fa-level-up-alt ml-2"></i>
				</div>
				<% if current_user == pc.user %>
				<div class="col-md-5 offset-md-1 link-box">
					<a href="" class="fas fa-edit link-to-black"> 編集する</a>
					<%= link_to " 削除する", post_post_comment_path(pc), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "fas fa-trash-alt link-to-black" %>
				</div>
				<% end %>
			</div>
			<div class="row post-content-box">
				<div class="col-md-12"><%= simple_format(pc.comment) %></div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3 offset-md-9">
			<%= l pc.created_at %>
		</div>
	</div>
</div>
<% end %>
