<%= render "layouts/timer" %>

<div class="row">
	<div class="col-md-10 offset-md-1 post-index-box post-<%= @post.id %>">
		<%= render "posts/post_detail", post: @post %>
	</div>
</div>

<div class="row" id="comment-<%= @post.id %>">
	<%= render "posts/post_comment", post_comments: @post_comments %>
</div>
<div id="show-comment-form" class="row">
	<div class="col-md-10 offset-md-1 post-index-box">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<input class="fake-comment-field" type="text" placeholder="コメントする">
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-10 offset-md-1 comment-form post-index-box">
		<div class="row">
			<div class="col-md-1">
				<%= image_tag call_user_img(current_user), size: "60x60", fallback: "noimage.png", class: "user-icon" %>
			</div>
			<div class="col-md-11">
				<div class="row">
					<div class="col-md-6">
						<span class="ml-3"><%= current_user.name %></span>
					</div>
					<div class="col-md-3">
						<p><span id="counter"></span>/100文字</p>
					</div>
					<div id="close-form" class="col-md-3">
						<i class="fas fa-2x fa-times-circle"></i>
					</div>
				</div>
				<div class="row post-content-box">
					<%= form_with model: [@post, @post_comment], method: :post do |f| %>
						<%= f.text_area :comment, size: "70x3", class: "col-md-8 offset-md-1 comment-field", id: "input-text" %>
						<%= f.submit "コメント", class: "col-md-2 mb-3 btn btn-sm btn-info" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<%= render "layouts/redirect_back" %>
