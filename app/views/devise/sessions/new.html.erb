<div class="form-box">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h3 class="page-title">ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <%= f.label :email, class: "form-title col-md-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field col-md-7" %>
        </div>
        <div class="row">
          <%= f.label :password, class: "form-title col-md-4" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-field col-md-7" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row">
            <div class="col-md-6 offset-md-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>
        <div class="row">
          <%= f.submit "ログイン", class: "btn btn-info col-md-5 offset-md-4", style: "margin-bottom:30px" %>
        </div>
        <div class="row">
          <%= link_to "かんたんログイン（閲覧用）", new_guest_path, method: :post, class: "btn btn-success col-md-5 offset-md-4", style: "margin-bottom:30px" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>